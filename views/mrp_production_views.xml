<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Acción para el Dashboard del MRP -->
        <record id="action_mrp_production_dashboard" model="ir.actions.client">
            <field name="name">MRP Dashboard</field>
            <field name="tag">mrp_production_dashboard</field>
            <field name="target">current</field>
        </record>

        <!-- Menú para el Dashboard del MRP -->
        <menuitem id="menu_mrp_production_dashboard"
                  name="MRP Dashboard"
                  parent="mrp.menu_mrp_root"
                  action="action_mrp_production_dashboard"
                  sequence="10"/>
        <!-- Acción para la vista Gantt-->
        <record id="action_mrp_production_gantt" model="ir.actions.act_window">
           <field name="name">Gantt de Órdenes de Producción</field>
           <field name="res_model">mrp.production</field>
           <field name="view_mode">gantt</field>
           <field name="context">{'search_default_state': 'done'}</field>
       </record>

    </data>
</odoo>