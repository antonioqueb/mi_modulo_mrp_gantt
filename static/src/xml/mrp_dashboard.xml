<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="mrp_production_dashboard.MrpDashboard">
        <div class="o_action o_mrp_dashboard">
            <h1>Dashboard de Órdenes de Producción</h1>
            <p>Este es un ejemplo básico de dashboard.</p>
             <div class="o_mrp_gantt_container">
                  <t t-call="mrp_production_dashboard.GanttView"/>
             </div>
        </div>
    </t>

    <t t-name="mrp_production_dashboard.GanttView">
      <div class="o_mrp_gantt_view">
         <t t-set="action" t-value="env.services.action.doAction('action_mrp_production_gantt')"/>
      </div>
   </t>
</templates>